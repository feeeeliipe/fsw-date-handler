{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES6",
      "es2017",
      "dom"
    ] ,                          
    "module": "commonjs",                     
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "declaration": true, 
    "declarationMap": true,
    "sourceMap": true, 
    "outDir": "dist"
  },
  "include": [
    "src"
  ]
}
